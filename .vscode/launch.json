{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch",
            "type": "cppdbg",
            "request": "launch",

            "program": "${workspaceFolder}/build/devinit",
            "cwd": "${workspaceFolder}",

            "args": [ "-p", "New Project", "-l", "c" ],

            "externalConsole": false,

            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build project",

            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}